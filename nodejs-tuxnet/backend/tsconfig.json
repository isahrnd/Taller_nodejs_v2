{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node", "jest"]
  },
  "include": ["src", "tests", "src/types/**/*.d.ts", "tests"],
  "exclude": ["node_modules", "dist"]
}
